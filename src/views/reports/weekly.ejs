<!DOCTYPE html>
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Weekly Punch Report</title>
    <style>
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: "Public Sans", sans-serif;
      }

      @font-face {
        font-family: "Public Sans";
        src: local("Public Sans"),
          url("../../public/fonts/PublicSans-Regular.ttf") format("truetype");
        font-weight: 400;
      }

      @font-face {
        font-family: "Public Sans";
        src: local("Public Sans"),
          url("../../public/fonts/PublicSans-Regular.ttf") format("truetype");
        font-weight: 500;
      }

      @font-face {
        font-family: "Public Sans";
        src: local("Public Sans"),
          url("../../public/fonts/PublicSans-Medium.ttf") format("truetype");
        font-weight: 600;
      }

      @font-face {
        font-family: "Public Sans";
        src: local("Public Sans"),
          url("../../public/fonts/PublicSans-MediumItalic.ttf")
            format("truetype");
        font-weight: 600;
        font-style: italic;
      }

      @font-face {
        font-family: "Public Sans";
        src: local("Public Sans"),
          url("../../public/fonts/PublicSans-Bold.ttf") format("truetype");
        font-weight: 700;
      }
    </style>

    <style>
      .table-container {
        padding: 12px;
      }

      table {
        border-spacing: 0;
        border-collapse: separate;
        border-radius: 6px;
        border: 1px solid #e8ecfa;
        overflow: hidden;
        width: 100%;
      }

      table .first-column {
        border-bottom: 1px solid #e8ecfa;
      }

      table thead {
        background-color: aliceblue;
      }

      table thead th {
        border-bottom: 1px solid #e8ecfa;
        border-right: 1px solid #e8ecfa;
      }

      table tbody td {
        border-right: 1px solid #e8ecfa;
        border-bottom: 1px solid #e8ecfa;
      }

      table tbody td:last-child {
        border-right: 0;
      }

      table tbody tr:last-child td {
        border-bottom: 0;
      }

      table tbody tr:last-child td:last-child {
        border-right: 0;
      }

      table thead th {
        font-size: 8px;
        padding: 8px;
        line-height: 12px;
        font-weight: 600;
      }

      table tbody td {
        font-weight: 600;
        text-align: center;
        font-size: 8px;
        padding: 8px;
        line-height: 12px;
        font-weight: 400;
      }
    </style>
  </head>

  <body>
    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th class="first-column" rowspan="4">Employee Name</th>
          </tr>
          <tr>
            <th colspan="22">
              Time Attendance for the Period: <%= tableHeaders[0].date %> to <%=
              tableHeaders[tableHeaders.length - 1].date %>
            </th>
          </tr>
          <tr>
            <% for (let head of tableHeaders) { %>
            <th colspan="3"><%= head.date %><br /><%= head.day %></th>
            <% } %>
            <th>Total Hr</th>
          </tr>
          <tr>
            <% for (let header of tableHeaders) {%>
            <th>IN</th>
            <th>OUT</th>
            <th>Hrs</th>
            <% } %>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% for (let employee of employeePunchInfo) {%>
          <tr>
            <td><%= employee?.name %></td>
            <% for (let header of tableHeaders) {%>
            <td><%= employee.punchData[header.date]?.INTime %></td>
            <td><%= employee.punchData[header.date]?.OUTTime %></td>
            <td>
              <%= employee.punchData[header.date]?.WorkTimeInMins === 0 ? '0' :
              employee.punchData[header.date]?.WorkTimeInMinsShow %>
            </td>
            <% } %>
            <td>
              <%= employee.totalMinsWorked === 0 ? '0' :
              employee.totalMinsWorkedShow %>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </body>
</html>
